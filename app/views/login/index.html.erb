<!DOCTYPE html>
<html>
  <head>
    <title>OwnCoin</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body id="login">
    <div class="container">
        <%= form_tag login_try_auth_path, method: :post, class: 'form-signin' do %>
          <%= image_tag 'owncoin.png' %>
          <div class="title">Please sign in</div>
          <% if @error %>
            <span style="color:red">Bad authentication...</span>
          <% end %>
          <%= text_field_tag(:username, nil, class: 'form-control', placeholder: 'Username') %>
          <%= password_field_tag(:password, nil, class: 'form-control', placeholder: 'Password') %>
          <div class="btn-holder">
            <button class="btn btn-success" type="submit"><%= icon('sign-in') %>&nbsp;Sign in</button>
          </div>
        <% end %>
    </div>
  </body>
</html>
